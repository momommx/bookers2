<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li>
                <nav class ="nav-link text-light">
                  <a class="navbar-brand" href="/">
                    <i class="fas fa-home"></i>
                    Home
                  </a>
                </nav>
              </li>
              <% if user_signed_in? %>
                <li>
                  <nav class ="nav-link text-light">
                    <a class="navbar-brand" href="/users">
                      <i class="fas fa-users"></i>
                      Users
                    </a>
                  </nav>
                </li>
                <li>
                  <nav class ="nav-link text-light">
                    <a class="navbar-brand" href="/books">
                      <i class="fas fa-book-open"></i>
                      Books
                    </a>
                  </nav>
                </li>
                <li>
                  <%#= link_to " Log out", destroy_user_session_path, method: :delete %>
                  <nav class ="nav-link text-light">
                    <a class="navbar-brand" data-method="delete" href="/users/sign_out">
                      <i class="fas fa-sign-out-alt"></i>
                      Log out
                    </a>
                  </nav>
                </li>
              <% else %>
                <li>
                  <nav class ="nav-link text-light">
                    <a class="navbar-brand" href="/home/about">
                      <i class="fas fa-link"></i>
                      About
                    </a>
                  </nav>
                </li>
                <li>
                  <nav class ="nav-link text-light">
                    <a class="navbar-brand" href="/users/sign_up">
                      <i class="fas fa-user-plus"></i>
                      Sign up
                    </a>
                  </nav> 
                </li>
                <li>
                  <nav class ="nav-link text-light">
                    <a class="navbar-brand" href="/users/sign_in">
                      <i class="fas fa-sign-in-alt"></i>
                      Log in
                    </a>
                  </nav> 
                </li>       
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <main class="mb-auto">
     <%= yield %>
    </main>
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
           <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
