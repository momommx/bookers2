<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <nav class="nav-link text-light">
                    <%= link_to user_path(current_user), class:'navbar-brand' do %>
                      <i class="fas fa-home"></i>
                      Home
                    <% end %>
                  </nav>
                </li>
              <% else %>
                 <li>
                  <nav class ="nav-link text-light">
                    <%= link_to root_path, class:'navbar-brand' do %>
                      <i class="fas fa-home"></i>
                      Home
                    <% end%>
                  </nav>
                </li>
              <% end %>
              <% if user_signed_in? %>
                <li>
                  <nav class ="nav-link text-light">
                    <%= link_to users_path, class:'navbar-brand' do %>
                      <i class="fas fa-users"></i>
                      Users
                    <% end %>
                  </nav>
                </li>
                <li>
                  <nav class ="nav-link text-light">
                    <%= link_to books_path, class:'navbar-brand' do %>
                      <i class="fas fa-book-open"></i>
                      Books
                    <% end %>
                  </nav>
                </li>
                <li>
                  <nav class ="nav-link text-light">
                    <%= link_to destroy_user_session_path, method: :delete, class:'navbar-brand' do %>
                      <i class="fas fa-sign-out-alt"></i>
                      Log out
                    <% end %>
                  </nav>
                </li>
              <% else %>
                <li>
                  <nav class ="nav-link text-light">
                    <%= link_to about_path, class:'navbar-brand' do %>
                      <i class="fas fa-link"></i>
                      About
                    <% end %>
                  </nav>
                </li>
                <li>
                  <nav class ="nav-link text-light">
                    <%= link_to new_user_registration_path, class:'navbar-brand' do %>
                      <i class="fas fa-user-plus"></i>
                      Sign up
                    <% end %>
                  </nav> 
                </li>
                <li>
                  <nav class ="nav-link text-light">
                    <%=link_to new_user_session_path, class:'navbar-brand' do %>
                      <i class="fas fa-sign-in-alt"></i>
                      Log in
                    <% end %>
                  </nav> 
                </li>       
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <main class="mb-auto">
     <%= yield %>
    </main>
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
           <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>